<h1>ブログ詳細画面</h1>
<p>タイトル：<%= @blog.title %></p>
<p>内容：<%= @blog.content %></p>
<p>画像：<%= image_tag @blog.image %></p>

<% unless @blog.user == current_user %>
  <% if @favorite.present? %>
   <%= link_to "お気に入り解除", favorite_path(id: @favorite.id), method: :delete, class: "btn btn-danger" %>
  <% else %>
   <%= link_to "お気に入り登録", favorites_path(blog_id: @blog.id), method: :post, class: "btn btn-primary" %>
  <% end %>
<% end %>

<%= link_to "一覧に戻る", blogs_path %>
